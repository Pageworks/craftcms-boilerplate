{% set image = data.image[0] ?? null %}
{% if image %}
    {% if image.width > 320 and image.width <= 520 %}
        {% set transformedImages = craft.imager.transformImage(image, 
            [
                { width: 320, mode: 'fit', format: imageFormat, position: image.getFocalPoint() },
                { width: image.width, mode: 'fit', format: imageFormat, position: image.getFocalPoint() },
            ])
        %}
    {% elseif image.width > 520 %}
        {% set transformedImages = craft.imager.transformImage(image, 
            [
                { width: 320, mode: 'fit', format: imageFormat, position: image.getFocalPoint() },
                { width: 520, mode: 'fit', format: imageFormat, position: image.getFocalPoint() },
            ])
        %}
    {% else %}
        {% set transformedImages = craft.imager.transformImage(image, [
            { format: imageFormat, position: image.getFocalPoint() }
        ]) %}
    {% endif %}
    <rich-text-image-block lazy-css="rich-text-image-block buttons">
        {% if data.imagePosition == 'left' %}
            <img-shim>
                <img src="{{ transformedImages[0].url }}" alt="{{ image.description }}" loading="lazy" width="320" srcset="{{ craft.imager.srcset(transformedImages) }}" />
            </img-shim>
        {% endif %}
        <content-wrapper style="margin:{{ data.verticalAlignment }};">
            {% if data.copy|length %}
                {{ data.copy }}
            {% endif %}
            {% if data.callToActionButton.url|length %}
                <div class="block w-full text-left mt-1.25">
                    <a href="{{ data.callToActionButton.url }}" target="{{ data.callToActionButton.target }}" class="button {{ data.buttonStyle }} -primary">{{ data.callToActionButton.customText }}</a>
                </div>
            {% endif %}
        </content-wrapper>
        {% if data.imagePosition == 'right' %}
            <img-shim>
                <img src="{{ transformedImages[0].url }}" alt="{{ image.description }}" loading="lazy" width="320" srcset="{{ craft.imager.srcset(transformedImages) }}" />
            </img-shim>
        {% endif %}
    </rich-text-image-block>
{% endif %}
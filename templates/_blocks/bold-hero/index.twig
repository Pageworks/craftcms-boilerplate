<bold-hero lazy-css="bold-hero buttons">
    <copy-wrapper>
        {% if data.heading|length %}
            <h1>{{ data.heading }}</h1>
        {% endif %}
        {% if data.copy|length %}
            {{ data.copy }}
        {% endif %}
        {% if data.callToAction.url|length %}
            <a href="{{ data.callToAction.url }}" class="button -solid -primary -tall -wide mr-1 mt-1 font-md">{{ data.callToAction.customText }}</a>
        {% endif %}
        {% if data.secondaryAction.url|length %}
            <a href="{{ data.secondaryAction.url }}" class="button -tall -wide -solid -primary -light mt-1 font-md">{{ data.secondaryAction.customText }}</a>
        {% endif %}
    </copy-wrapper>
    {% set images = craft.imager.transformImage(data.image[0], [
        { width: 320, height: 600, position: data.image[0].getFocalPoint(), format: imageFormat },
        { width: 384, height: 600, position: data.image[0].getFocalPoint(), format: imageFormat },
        { width: 640, height: 600, position: data.image[0].getFocalPoint(), format: imageFormat },
        { width: 960, height: 600, position: data.image[0].getFocalPoint(), format: imageFormat },
    ]) %}
    <img-shim>
        <img alt="{{ data.image[0].description }}" src="{{ images[0].url }}" srcset="{{ craft.imager.srcset(images) }}" width="320" loading="lazy" style="opacity:0;transition:opacity 300ms ease-in-out;" onload="this.style.opacity = '1';">
    </img-shim>
</bold-hero>
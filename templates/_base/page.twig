{% extends "_base/base" %}

{% block documentHead %}
    {{ craft.papertrain.css(['header', 'navigation-drawer', 'page', 'buttons']) }}
    {% block head %}{% endblock %}
{% endblock %}

{% block page %}
    {% if notifications.text1|length %}
        {% include "_page-components/banner-notification" %}
    {% endif %}
    {% include "_page-components/header" %}
    <main pjax-id="main" class="page" lazy-css="soft-loading" style="min-height: calc(100% - 2rem);">
        {% block content %}{% endblock %}
    </main>
    {% include "_page-components/footer" %}
{% endblock %}
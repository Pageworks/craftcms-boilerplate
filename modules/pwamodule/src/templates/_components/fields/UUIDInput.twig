{% import "_includes/forms" as forms %}

{{
	forms.textField({
		id: name,
		name: name,
		value: value
	})
}}
<button class="btn submit" style="font-size: 14px;margin-top:4px;" id="{{ name }}">Clear Offline Caches</button>

<script>
	var field = document.getElementById('{{ namespacedId }}');
	field.setAttribute('readonly', 'readonly');
	field.style.background = 'rgb(250,250,250)';
	field.style.boxShadow = 'none';
	field.style.opacity = '0.8';
	field.style.color = '#596473';
	field.style.display = 'none';

	var button = document.body.querySelector('button#{{ namespacedId }}');
	button.addEventListener('click', function() {
		field.value = Date.now().toString();
		console.log(field.value);
	});
</script>
<style>
	.input .field {
		margin: 0 !important;
	}
</style>

{
	"scripts": {
		"cleanup": "node ./build/cleanup.js",
		"setup": "npm ci && node ./build/setup.js && composer install",
		"bundle": "snowpack",
		"brixi": "brixi",
		"compile": "tsc",
		"eslint": "eslint -c .eslintrc.js templates/**/*.ts",
		"stylelint": "stylelint \"templates/**/*.scss\"",
		"lint": "npm run eslint && npm run stylelint",
		"prettier": "prettier --write \"templates/**/*.ts\" && prettier --write \"templates/**/*.scss\" && prettier --write \"modules/**/*.php\"",
		"precommit": "npm run prettier && git add . && npm run eslint && npm run stylelint",
		"predeploy": "npm run eslint && npm run stylelint && npm run production",
		"sass:dev": "cssmonster --e dev",
		"sass:prod": "cssmonster",
		"build": "npm run cleanup && npm run compile && npm run sass:dev && djinnjs -e dev && npm run cleanup",
		"production": "npm run cleanup && npm run compile && npm run sass:prod && djinnjs -e production && npm run cleanup"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.16.1",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^3.1.0",
		"prettier": "^2.2.1",
		"snowpack": "^1.0.0",
		"stylelint": "^12.0.1",
		"stylelint-config-recommended": "^3.0.0",
		"tslint": "^5.20.1",
		"typescript": "^3.9.9"
	},
	"dependencies": {
		"@codewithkyle/notifyjs": "^2.1.1",
		"@codewithkyle/supercomponent": "^1.0.0",
		"brixi": "^0.3.1",
		"cssmonster": "^0.3.1",
		"djinnjs": "^0.3.2",
		"flatpickr": "^4.6.9",
		"lit-html": "^1.3.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run precommit"
		}
	},
	"snowpack": {
		"webDependencies": [
			"@codewithkyle/notifyjs",
			"@codewithkyle/supercomponent",
			"flatpickr",
			"lit-html"
		]
	}
}
